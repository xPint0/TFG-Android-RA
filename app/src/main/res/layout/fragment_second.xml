<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondFragment"
    android:background="@android:color/transparent">

    <!--<ImageView
        android:id="@+id/iv_fondo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondopantalla" />-->

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/vinyl2"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/stat_sys_warning" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/stat_sys_warning" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/stat_sys_warning" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/stat_sys_warning" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_info5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/stat_sys_warning"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="555dp" />

    <TextView
        android:id="@+id/tv_prueba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/iv_album"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>